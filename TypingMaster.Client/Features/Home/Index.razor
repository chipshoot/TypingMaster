@page "/"
@using TypingMaster.Client.Features.Course

@inject ApplicationContext AppState
@inject NavigationManager Navigation

@if (AppState.IsLoggedIn)
{
    @if (AppState.CurrentCourse != null &&
         AppState.CurrentAccount != null &&
         AppState.CurrentAccount.CourseId == AppState.CurrentCourse.Id)
    {
        <Trainer></Trainer>
    }
    else
    {
        <BeginnerPlanWizard></BeginnerPlanWizard>
    }

}
else
{
    <Welcome></Welcome>
}
