@inherits LayoutComponentBase
@inject TypingTrainerContext AppState
<style>
    .nav-link-white {
        color: white !important;
    }

    .auth-link {
        margin-left: auto;
    }
</style>
<div class="container-fluid">
    <Layout ShowFooter="true" AdditionalAssemblies="[typeof(MainLayout).Assembly]">
        <Header>
            <Nav IsVertical="false" class="w-100">
                <NavLink class="btn btn-link nav-link-white" href="trainer" Match="NavLinkMatch.All">Typing Master</NavLink>
                @if (AppState.IsLoggedIn)
                {
                    <NavLink class="btn btn-link nav-link-white" href="trainer" Match="NavLinkMatch.All">Lessons</NavLink>
                }
                <NavLink class="btn btn-link nav-link-white" href="#">Test</NavLink>
                <NavLink class="btn btn-link nav-link-white" href="reports">Reports</NavLink>
                <NavLink class="btn btn-link nav-link-white" href="leaderboard">Options</NavLink>
                <NavLink class="btn btn-link nav-link-white" href="leaderboard">Game</NavLink>
                <NavLink class="btn btn-link nav-link-white" href="leaderboard">Help</NavLink>
                @if (AppState.IsLoggedIn)
                {
                    <NavLink class="btn btn-link nav-link-white auth-link" href="leaderboard">Logout</NavLink>
                }
                else
                {
                    <div class="auth-link">
                        <NavLink class="btn btn-link nav-link-white" href="login">Login</NavLink>
                        <NavLink class="btn btn-link nav-link-white" href="signup">SignUp</NavLink>
                    </div>
                }

            </Nav>
        </Header>
        <Main>
            @Body
        </Main>
        <Footer>Developing mode</Footer>
    </Layout>
</div>
